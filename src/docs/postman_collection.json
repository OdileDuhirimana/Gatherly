{
  "info": {
    "name": "Gatherly API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Comprehensive request collection for Gatherly backend."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "attendeeToken", "value": "" },
    { "key": "organizerToken", "value": "" },
    { "key": "adminToken", "value": "" },
    { "key": "eventId", "value": "1" },
    { "key": "ticketId", "value": "1" },
    { "key": "attendeeId", "value": "1" },
    { "key": "commentId", "value": "1" },
    { "key": "notificationId", "value": "1" },
    { "key": "paymentId", "value": "1" },
    { "key": "userId", "value": "1" }
  ],
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/health"
          }
        },
        {
          "name": "API Info",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api"
          }
        },
        {
          "name": "Swagger UI",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/docs"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Attendee",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Attendee One\",\n  \"email\": \"attendee@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"attendee@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" }
            ],
            "url": "{{baseUrl}}/api/auth/me"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"attendee@example.com\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/forgot-password"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"replace-with-token\",\n  \"password\": \"newPassword123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/reset-password"
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "List Events",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/events"
          }
        },
        {
          "name": "Get Event",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/events/{{eventId}}"
          }
        },
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tech Meetup 2026\",\n  \"description\": \"Quarterly engineering meetup\",\n  \"category\": \"Technology\",\n  \"location\": \"Kigali Convention Center\",\n  \"images\": [\"https://example.com/banner.jpg\"],\n  \"tags\": [\"backend\", \"networking\"],\n  \"startDate\": \"2026-06-01T09:00:00.000Z\",\n  \"endDate\": \"2026-06-01T17:00:00.000Z\",\n  \"published\": true,\n  \"featured\": false\n}"
            },
            "url": "{{baseUrl}}/api/events"
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"featured\": true\n}"
            },
            "url": "{{baseUrl}}/api/events/{{eventId}}"
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" }
            ],
            "url": "{{baseUrl}}/api/events/{{eventId}}"
          }
        }
      ]
    },
    {
      "name": "Tickets",
      "item": [
        {
          "name": "List Tickets",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/events/{{eventId}}/tickets"
          }
        },
        {
          "name": "Create Ticket",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"Regular\",\n  \"price\": 25.00,\n  \"currency\": \"usd\",\n  \"quantity\": 150,\n  \"limitPerUser\": 4\n}"
            },
            "url": "{{baseUrl}}/api/events/{{eventId}}/tickets"
          }
        },
        {
          "name": "Update Ticket",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 30.00,\n  \"quantity\": 200\n}"
            },
            "url": "{{baseUrl}}/api/events/{{eventId}}/tickets/{{ticketId}}"
          }
        },
        {
          "name": "Delete Ticket",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" }
            ],
            "url": "{{baseUrl}}/api/events/{{eventId}}/tickets/{{ticketId}}"
          }
        }
      ]
    },
    {
      "name": "Attendees",
      "item": [
        {
          "name": "Register Attendee to Ticket",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketId\": {{ticketId}}\n}"
            },
            "url": "{{baseUrl}}/api/events/{{eventId}}/attendees/register"
          }
        },
        {
          "name": "List Attendees for Event",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" }
            ],
            "url": "{{baseUrl}}/api/events/{{eventId}}/attendees"
          }
        },
        {
          "name": "Check In Attendee",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"checkedIn\": true\n}"
            },
            "url": "{{baseUrl}}/api/events/{{eventId}}/attendees/{{attendeeId}}/checkin"
          }
        },
        {
          "name": "Remove Attendee",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" }
            ],
            "url": "{{baseUrl}}/api/events/{{eventId}}/attendees/{{attendeeId}}"
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "List Comments",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/events/{{eventId}}/comments"
          }
        },
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Great event!\",\n  \"rating\": 5\n}"
            },
            "url": "{{baseUrl}}/api/events/{{eventId}}/comments"
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" }
            ],
            "url": "{{baseUrl}}/api/events/{{eventId}}/comments/{{commentId}}"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Purchase Ticket",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Idempotency-Key", "value": "purchase-{{ticketId}}-{{userId}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 1\n}"
            },
            "url": "{{baseUrl}}/api/payments/purchase/{{ticketId}}"
          }
        },
        {
          "name": "List User Payments",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" }
            ],
            "url": "{{baseUrl}}/api/payments/{{userId}}"
          }
        },
        {
          "name": "Refund Payment",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": "{{baseUrl}}/api/payments/refund/{{paymentId}}"
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "List My Notifications",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" }
            ],
            "url": "{{baseUrl}}/api/notifications"
          }
        },
        {
          "name": "Send Notification",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"Announcement\",\n  \"message\": \"Event starts in 2 hours\",\n  \"eventId\": {{eventId}},\n  \"userId\": {{userId}},\n  \"emailSubject\": \"Gatherly Update\"\n}"
            },
            "url": "{{baseUrl}}/api/notifications/send"
          }
        },
        {
          "name": "Mark Notification Read",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{attendeeToken}}" }
            ],
            "url": "{{baseUrl}}/api/notifications/{{notificationId}}/read"
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Event Analytics",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{organizerToken}}" }
            ],
            "url": "{{baseUrl}}/api/analytics/events/{{eventId}}"
          }
        },
        {
          "name": "Users Analytics (Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": "{{baseUrl}}/api/analytics/users"
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Stripe Webhook (Local Test)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Stripe-Signature", "value": "replace-with-real-signature" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"evt_test_webhook\",\n  \"type\": \"payment_intent.succeeded\",\n  \"data\": {\n    \"object\": {\n      \"id\": \"pi_test_123\",\n      \"metadata\": {\n        \"ticketId\": \"1\",\n        \"eventId\": \"1\",\n        \"userId\": \"1\",\n        \"quantity\": \"1\"\n      }\n    }\n  }\n}"
            },
            "url": "{{baseUrl}}/api/webhooks/stripe"
          }
        }
      ]
    }
  ]
}
